<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <TextView
        android:id="@+id/base_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:lineSpacingExtra="8dp"
        android:fontFamily="@font/font_family_second"
        android:gravity="center" />
    <View
        android:id="@+id/base_dialog_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_dark"
        android:layout_below="@id/base_dialog_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/base_dialog_line">
        <TextView
            android:id="@+id/base_dialog_positive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@drawable/category_ripple"
            android:clickable="true"
            android:focusable="true" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white_dark" />
        <TextView
            android:id="@+id/base_dialog_negative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@drawable/category_ripple"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</RelativeLayout>